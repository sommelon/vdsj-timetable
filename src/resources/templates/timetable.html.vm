<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="Content-Type" content="text/html">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <title>Timetable v1.0.0</title>
    </head>

    <body>
        <div class="container">
            <h2 class="text-center mt-4">$timetable.getFullTitle()</h2>
            <table class="table table-bordered mt-4">
                <thead>
                    <tr class="text-center">
                        <th class="text-left">Predmet</th>

                        <th>Pondelok</th>
                        <th>Utorok</th>
                        <th>Streda</th>
                        <th>Stvrtok</th>
                        <th>Piatok</th>
                    </tr>
                </thead>
                <tbody>
                    #foreach($schedule in $timetable.schedules)
                    <tr>
                        <td>$schedule.title</td>
                        #foreach($event in $schedule.events)
                            #if($event.getTime().getDay().toString() == "MONDAY")
                                <td>$event.renderEvent("")</td>
                            #else
                                <td></td>
                            #end

                            #if($event.getTime().getDay().toString() == "THUSDAY")
                                <td>$event.renderEvent("")</td>
                            #else
                                <td></td>
                            #end

                            #if($event.getTime().getDay().toString() == "WEDNESDAY")
                                <td>$event.renderEvent("")</td>
                            #else
                                <td></td>
                            #end

                            #if($event.getTime().getDay().toString() == "THURSDAY")
                                <td>$event.renderEvent("")</td>
                            #else
                                <td></td>
                            #end

                            #if($event.getTime().getDay().toString() == "FRIDAY")
                                <td>$event.renderEvent("")</td>
                            #else
                                <td></td>
                            #end

                        #end
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    </body>
</html>
